.seekDetailsCon {
  background: #FFF;
  border-radius: 3rpx;
  box-shadow: 0 1rpx 1rpx 1rpx rgba(0,0,0,0.12);
  display: block;
  overflow: hidden;
  position: relative;
  padding: 18rpx;
  margin: 18rpx;
}

.seekDetailsCon .seekDetails {
  display: flex;
  align-items: center;
}
.seekDetails .imgCon{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.seekDetails .imgCon image{
  width: 100%;
  height: 100%;
}
.seekDetails .seekDetailsText text{
  display: block;
  font-size: 16px;
}
.seekDetails .seekDetailsText .fullName{
  display: block;
  font-size: 12px;
  color: rgba(0,0,0,0.82);
}
.detailCon .description,.detailCon .language{
  margin-top: 20rpx;
  font-size: 12px;
  color: rgba(0,0,0,0.82);
}
