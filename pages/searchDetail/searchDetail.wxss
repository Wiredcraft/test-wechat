/* pages/searchDetail/searchDetail.wxss */

.info {
  overflow: hidden;
}

.info image {
  width: 40px;
  height: 40px;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 4%;
  float: left;
}

.info-text {
  display: inline-block;
}

.sub-label {
  font-size: 20px;
}

.info-text-label {
  font-weight: bold;
}

.d-block {
  display: block;
}

.detail-content {
  border-radius: 2px;
  margin-top: 20px;
  box-shadow: 0 1px 1px 1px rgba(0, 0, 0, 0.12);
}
